<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="30101008" id="verklizan.umox.mobile" ios-CFBundleVersion="3010100" version="3.1.1" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Responder</name>
    <description>
    An app to connect with the umo platform
    </description>
    <author email="info@verklizan.com" href="http://www.verklizan.com">
    Verklizan RD
    </author>
    <content src="index.html" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <access origin="*" />
    <access launch-external="yes" origin="tel:*" />
    <preference name="Orientation" value="portrait" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="prerendered-icon" value="true" />
    <platform name="android">
        <resource-file src="google-services.json" target="app/google-services.json" />
        <preference name="android-minSdkVersion" value="19" />
        <preference name="android-targetSdkVersion" value="29" />
        <preference name="SplashScreen" value="screen" />
        <preference name="loadUrlTimeoutValue" value="60000" />
        <preference name="SplashScreenDelay" value="10000" />
        <icon density="ldpi" src="config/icons/ResponderApp_iTunesArtwork.png" />
        <icon density="mdpi" src="config/icons/ResponderApp_iTunesArtwork.png" />
        <icon density="hdpi" src="config/icons/ResponderApp_iTunesArtwork.png" />
        <icon density="xhdpi" src="config/icons/ResponderApp_iTunesArtwork.png" />
        <splash density="port-ldpi" src="config/splashscreen/screen.png" />
        <splash density="port-mdpi" src="config/splashscreen/screen.png" />
        <splash density="port-hdpi" src="config/splashscreen/screen.png" />
        <splash density="port-xhdpi" src="config/splashscreen/screen.png" />
    </platform>
    <platform name="ios">
        <resource-file src="GoogleService-Info.plist" />
        <preference name="AutoHideSplashScreen" value="false" />
        <preference name="ShowSplashScreenSpinner" value="false" />
        <preference name="WKWebViewOnly" value="true" />
        <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />
        <feature name="CDVWKWebViewEngine">
            <param name="ios-package" value="CDVWKWebViewEngine" />
        </feature>
        <icon height="167" src="config/icons/ResponderApp_Icon-167.png" width="167" />
        <icon height="180" src="config/icons/ResponderApp_Icon-60@3x.png" width="180" />
        <icon height="120" src="config/icons/ResponderApp_Icon-60@2x.png" width="120" />
        <icon height="60" src="config/icons/ResponderApp_Icon-60.png" width="60" />
        <icon height="76" src="config/icons/ResponderApp_Icon-76.png" width="76" />
        <icon height="152" src="config/icons/ResponderApp_Icon-76@2x.png" width="152" />
        <icon height="20" src="config/icons/ResponderApp_Icon-Small-20.png" width="20" />
        <icon height="40" src="config/icons/ResponderApp_Icon-Small-40.png" width="40" />
        <icon height="80" src="config/icons/ResponderApp_Icon-Small-40@2x.png" width="80" />
        <icon height="57" src="config/icons/ResponderApp_Icon.png" width="57" />
        <icon height="114" src="config/icons/ResponderApp_Icon@2x.png" width="114" />
        <icon height="72" src="config/icons/ResponderApp_Icon-72.png" width="72" />
        <icon height="144" src="config/icons/ResponderApp_Icon-72@2x.png" width="144" />
        <icon height="29" src="config/icons/ResponderApp_Icon-small.png" width="29" />
        <icon height="58" src="config/icons/ResponderApp_Icon-small@2x.png" width="58" />
        <icon height="87" src="config/icons/ResponderApp_Icon-small@3x.png" width="87" />
        <icon height="50" src="config/icons/ResponderApp_Icon-Small-50.png" width="50" />
        <icon height="100" src="config/icons/ResponderApp_Icon-Small-50@2x.png" width="100" />
        <icon height="512" src="config/icons/ResponderApp_iTunesArtwork.jpg" width="512" />
        <icon height="1024" src="config/icons/ResponderApp_iTunesArtwork@2x.jpg" width="1024" />
        <splash height="1136" src="config/ios/splash/Default-568h@2x~iphone.png" width="640" />
        <splash height="1334" src="config/ios/splash/Default-667h.png" width="750" />
        <splash height="2208" src="config/ios/splash/Default-736h.png" width="1242" />
        <splash height="1242" src="config/ios/splash/Default-Landscape-736h.png" width="2208" />
        <splash height="1536" src="config/ios/splash/Default-Landscape@2x~ipad.png" width="2048" />
        <splash height="768" src="config/ios/splash/Default-Landscape~ipad.png" width="1024" />
        <splash height="2048" src="config/ios/splash/Default-Portrait@2x~ipad.png" width="1536" />
        <splash height="1024" src="config/ios/splash/Default-Portrait~ipad.png" width="768" />
        <splash height="960" src="config/ios/splash/Default@2x~iphone.png" width="640" />
        <splash height="480" src="config/ios/splash/Default~iphone.png" width="320" />
    </platform>
    <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
        <string>camera is used for adding pictures to subscriber notes</string>
    </edit-config>
    <edit-config file="*-Info.plist" mode="merge" target="NSPhotoLibraryUsageDescription">
        <string>photo library is used for adding pictures to subscriber notes</string>
    </edit-config>
    <edit-config file="*-Info.plist" mode="merge" target="NSLocationWhenInUseUsageDescription">
        <string>need location access to show route information</string>
    </edit-config>
    <edit-config file="*-Info.plist" mode="merge" target="NSLocationAlwaysUsageDescription">
        <string>need location access to show route information</string>
    </edit-config>
    <edit-config file="*-Info.plist" mode="merge" target="NSLocationAlwaysAndWhenInUseUsageDescription">
        <string>need location access to show route information</string>
    </edit-config>
    <config-file parent="/manifest/application" target="AndroidManifest.xml">
        <meta-data android:name="google_analytics_adid_collection_enabled" android:value="false" />
        <meta-data android:name="firebase_crash_collection_enabled" android:value="false" />
    </config-file>
    <plugin name="cordova-plugin-dialogs" spec="~2.0.1" />
    <plugin name="cordova-plugin-device" spec="~2.0.2" />
    <plugin name="cordova-plugin-geolocation" spec="~4.0.1" />
    <plugin name="cordova-plugin-inappbrowser" spec="~3.0.0" />
    <plugin name="cordova-plugin-file" spec="~6.0.1" />
    <plugin name="cordova-plugin-whitelist" spec="~1.3.1" />
    <plugin name="cordova-plugin-splashscreen" spec="~5.0.2" />
    <plugin name="cordova-ios-requires-fullscreen" spec="~0.0.2" />
    <plugin name="uk.co.workingedge.phonegap.plugin.launchnavigator" spec="~3.2.1" />
    <plugin name="cordova-plugin-camera" spec="~4.0.3" />
    <plugin name="cordova-support-google-services" spec="1.1.0" />
    <plugin name="phonegap-plugin-push" spec="^2.2.3" />
    <engine name="ios" spec="^4.5.5" />
    <engine name="android" spec="^7.1.4" />
</widget>
